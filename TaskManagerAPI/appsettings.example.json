// Güvenlik nedeniyle appsettings.json dosyası gitignore dosyasına eklenmiştir. Bu dosya örnek oluşturması açısından oluşturulmuştur.

{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",

    "ConnectionStrings": {
        "DefaultConnection": "Server=YOUR_SERVER;Database=YOUR_DB;User Id=YOUR_USER;Password=YOUR_PASSWORD;"
    },

    "JwtSettings": {
        "SecretKey": "YOUR_SECRET_KEY",
        "ExpirationMinutes": 60
    }
}
{

}
